<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">
    <LinearLayout
        android:layout_marginStart="@dimen/d1"
        android:layout_marginEnd="@dimen/d1"
        android:layout_marginTop="@dimen/d2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/d5"
            android:layout_height="@dimen/d5"
            android:src="@drawable/ic_all_categories"
            />

        <TextView
            android:id="@+id/tv_msg"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/d1_6"
            android:textColor="@android:color/black"
            android:text="@string/add_product_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>








        <androidx.cardview.widget.CardView
            android:id="@+id/cv_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d4_5"
            android:layout_marginTop="@dimen/d3_4"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/d1_2"
            android:theme="@style/card_wave"
            >

            <TextView
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/continues"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d2"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>