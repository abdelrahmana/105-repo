<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d15"
    android:orientation="vertical"
    android:background="@drawable/pop_uo_menu"
    android:layout_height="@dimen/d12">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_width="@dimen/d9"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentStart="true"
        android:textSize="13sp"
        android:textColor="#989898"
        android:text="@string/selled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_unselected_menu_option"
        android:layout_width="@dimen/d1_6"
        android:layout_height="wrap_content"/>
</RelativeLayout>
<RelativeLayout
    android:layout_gravity="center_horizontal"

    android:layout_width="@dimen/d9"
    android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"

            android:textSize="13sp"
        android:textColor="#989898"
        android:text="@string/blocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_unselected_menu_option"
        android:layout_width="@dimen/d1_6"
        android:layout_height="wrap_content"/>
</RelativeLayout>

    </LinearLayout>

</RelativeLayout>
