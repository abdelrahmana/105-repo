<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="6dp"
    android:id="@+id/cv_cat"
    android:layout_marginBottom="6dp"
    app:cardElevation="@dimen/d0_2"
    android:layout_width="@dimen/d5_2"
    android:layout_height="@dimen/d4_4"
    app:cardCornerRadius="@dimen/d1_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@drawable/category_unselected_item_bg"
        android:padding="6dp"
        android:id="@+id/rv_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="@dimen/half_unit"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/iv_new_products"
        android:src="@drawable/red_circle"
        android:layout_width="12dp"
        android:layout_height="12dp"/>
</androidx.cardview.widget.CardView>