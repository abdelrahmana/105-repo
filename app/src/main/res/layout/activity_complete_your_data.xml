<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="@dimen/d0_8"
        android:layout_marginEnd="@dimen/d0_8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include layout="@layout/toolbar_backpress1"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/transparent_black_percent_90"
            android:text="@string/complete_your_account_data"
            />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spinner_title"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:visibility="gone"
            android:id="@+id/shimmer_titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/shimmer_spinner"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/d1_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <Spinner
                android:layout_width="match_parent"

                android:visibility="gone"
                android:id="@+id/spinner_spical"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:visibility="gone"
                android:id="@+id/shimmer_spical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/shimmer_spinner"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/d0_8"
            android:layout_marginTop="@dimen/d1_6"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_edit_text"
            android:orientation="horizontal"


            >



            <EditText

                android:enabled="true"
                android:focusableInTouchMode="false"
                android:id="@+id/edit_date_birhday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d0_8"
                android:layout_marginEnd="@dimen/d0_8"
                android:layout_weight="1"
                android:padding="@dimen/d0_4"
                android:background="@color/transparent"
                android:gravity="start"
                android:hint="@string/date_of_virth"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/test4" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/d0_8"
            android:layout_marginTop="@dimen/d1_6"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_edit_text"
            android:orientation="horizontal"


            >



            <EditText

                android:id="@+id/edit_bio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d0_8"
                android:layout_marginEnd="@dimen/d0_8"
                android:layout_weight="1"
                android:padding="@dimen/d0_4"
                android:background="@color/transparent"
                android:gravity="start"
                android:hint="@string/bio"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/test4" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/d0_8"
            android:layout_marginTop="@dimen/d1_6"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_edit_text"
            android:orientation="horizontal"


            >



            <EditText

                android:id="@+id/edit_iban"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d0_8"
                android:layout_marginEnd="@dimen/d0_8"
                android:layout_weight="1"
                android:padding="@dimen/d0_4"
                android:background="@color/transparent"
                android:gravity="start"
                android:hint="@string/iban"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/test4" />




        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_sign_up"
                android:layout_marginTop="@dimen/d1_8"
                app:cardCornerRadius="@dimen/d1_2"
                android:elevation="@dimen/d0_8"
                app:cardElevation="@dimen/d0_8"
                android:focusable="true"
                android:clickable="true"
                android:theme="@style/card_wave"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/login_btn">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="@dimen/d0_6"

                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/done"/>


            </androidx.cardview.widget.CardView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:visibility="gone"
                android:id="@+id/shimmer_done_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/shimmer_done"/>

            </com.facebook.shimmer.ShimmerFrameLayout>
        </RelativeLayout>




        <TextView

            android:layout_marginTop="@dimen/d2_6"
            android:layout_gravity="center"
            android:id="@+id/skip"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="@dimen/d0_4"
            android:layout_marginStart="@dimen/d0_4"
            android:text="@string/continue_as_normal"
            android:textColor="@color/skip_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />






    </LinearLayout>

</ScrollView>