<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:orientation="vertical"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_backpress1"/>



        <LinearLayout
            android:paddingRight="8dp"
            android:paddingLeft="8dp"

            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/iv_avatar"
                android:src="@drawable/user_image_holder"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_marginStart="16dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="15dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/location"
                        android:layout_width="12dp"
                        android:tint="@color/colorPrimary"
                        android:layout_height="12dp"/>

                    <TextView
                        android:textSize="12dp"
                        android:layout_marginStart="2.5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:visibility="gone"
                        android:id="@+id/shimmer_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout

                                android:layout_marginTop="@dimen/d1"
                                android:background="#E6E6E6"
                                android:layout_width="100dp"
                                android:layout_height="@dimen/d2"
                                />

                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_notification"
                    android:layout_marginEnd="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notification_grey" />
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_notification"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginEnd="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_notification" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_save_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outlined_star" />

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:id="@+id/tv_available_product"
            android:layout_marginTop="4dp"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:visibility="gone"
            android:id="@+id/text_info_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_marginTop="@dimen/d1"
                    android:background="#E6E6E6"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/d2"
                    />

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <LinearLayout

            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:id="@+id/stars"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_star_1"
                android:src="@drawable/star_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_star_2"
                android:src="@drawable/star_empty"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_star_3"
                android:src="@drawable/star_empty"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_star_4"
                android:src="@drawable/star_empty"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_star_5"
                android:src="@drawable/star_empty"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_rate_count"
                android:layout_marginTop="-5dp"
                android:layout_marginStart="8dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:visibility="gone"
            android:id="@+id/star_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/star_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/star_empty"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/star_empty"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/star_empty"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/star_empty"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="-5dp"
                        android:layout_marginStart="8dp"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>



        <TextView
            android:id="@+id/title_voice"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="8dp"
            android:text="@string/voice_identity"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layoutDirection="ltr"
            android:visibility="gone"
           android:padding="@dimen/d1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/ly_vid"
            android:layout_marginTop="10dp"
            android:background="@drawable/seekbar_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_play_music"
                android:src="@drawable/ic_play"
                android:background="@drawable/red_circle"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_gravity="center_vertical"
                android:thumb="@drawable/thumb_seekbar"
                android:progressBackgroundTint="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layoutDirection="ltr"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:id="@+id/shimmer_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/seekbar_bg"
                android:orientation="horizontal"
                android:padding="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_play"
                    android:background="@drawable/red_circle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <SeekBar
                    android:layout_gravity="center_vertical"
                    android:thumb="@drawable/thumb_seekbar"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_category_seller"
            android:layout_marginTop="@dimen/d2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <include layout="@layout/category_item_shimmer"/>
                <include layout="@layout/category_item_shimmer"/>
                <include layout="@layout/category_item_shimmer"/>
                <include layout="@layout/category_item_shimmer"/>
                <include layout="@layout/category_item_shimmer"/>
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
        <HorizontalScrollView
            android:scrollbarThumbHorizontal="@drawable/scroll_style_custome"


            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="6dp"
                    android:id="@+id/cv_cat"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="@dimen/d0_2"
                    android:layout_width="@dimen/d5_2"
                    android:layout_height="@dimen/d4_4"
                    app:cardCornerRadius="@dimen/d1_2"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="@dimen/d5_2"
                    android:layout_height="@dimen/d4_4"
                    android:background="@drawable/category_unselected_item_bg"
                    android:padding="@dimen/d0_8"
                    android:id="@+id/rl_all_cat"

                    >

                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_all_categories" />
               </RelativeLayout>
                </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_categories"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            </LinearLayout>

        </HorizontalScrollView>




        <com.urcloset.smartangle.CustomViewPager
            android:layout_marginTop="@dimen/d1"
            android:id="@+id/seller_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:id="@+id/shimmer_main_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="320dp"
                android:layout_marginTop="@dimen/two_unit"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center_horizontal"
                android:background="@drawable/product_images_bg_shimmer"
               >

            </LinearLayout>



        </com.facebook.shimmer.ShimmerFrameLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>




