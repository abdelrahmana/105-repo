<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/d15"
    android:layout_height="@dimen/d16"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/d1_2"
    android:layout_marginTop="@dimen/d2_4"
    app:cardBackgroundColor="@color/lightBg"
    app:cardCornerRadius="@dimen/d1_6"
    android:layout_gravity="center_horizontal"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_product"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/product_images_bg"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/img_clip"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d11"
        android:id="@+id/iv_product" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/d1"
        android:gravity="center_horizontal"
        android:id="@+id/ly"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/price_bg"
            android:id="@+id/price"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text="$ 150"
            android:layout_width="@dimen/d10"
            android:layout_height="@dimen/d3"/>
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>