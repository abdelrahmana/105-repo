<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/two_unit"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.productPriceActivity.ProductPriceActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/unit"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/text_header_color"
            android:text="Your Product Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/unit"
            android:background="@drawable/search_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="$150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/unit"
            android:textAlignment="center"
            android:text="Lorem Ipsum Is Simply Dummy Text Of The Printing And Typesetting Industry. Lorem Ipsum Has Been The Industry's"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/two_unit"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/text_header_color"
        android:text="Publishing Fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/unit"
        android:background="@drawable/search_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#7BE677"
            android:text="$150"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/two_unit"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/text_header_color"
        android:text="Payment Method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>