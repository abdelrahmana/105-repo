<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="start"
    android:background="#F9F9F9"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d5_2">
    <ImageView
        android:layout_marginStart="@dimen/d1_6"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_cat_icon"
        android:src="@drawable/logo1"
        android:layout_width="@dimen/d1_4"
        android:layout_height="@dimen/d1_4"/>
    <TextView
        android:text="all products"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/d1_4"
        android:textColor="#818181"
        android:textSize="13sp"
        android:id="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>