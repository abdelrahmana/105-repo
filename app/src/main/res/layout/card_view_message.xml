<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/d0_6"
    android:layout_marginStart="@dimen/d0_8"
    android:layout_marginEnd="@dimen/d0_8"

    android:id="@+id/root_card_view_message"
    android:background="@color/white"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/d7"
            android:id="@+id/iv_profile"
            android:layout_gravity="top"

            android:layout_marginEnd="@dimen/d0_8"
            android:layout_height="@dimen/d7"
            android:src="@color/white"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--First line -->
            <LinearLayout
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                    android:textColor="@color/desinger_name"/>


                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/d0_4"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="@dimen/d0_8"
                    android:layout_marginEnd="@dimen/d0_8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/categroy_name"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_message_icon"
                    android:layout_marginEnd="@dimen/d0_8"
                    android:layout_width="@dimen/d3"
                    android:layout_height="@dimen/d3"
                    android:src="@drawable/done_all_active_3x"/>


                <TextView
                    android:id="@+id/tv_message_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message with replay"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/categroy_name"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/login_btn"
                android:text="$20"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_message_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/google_red"
                android:text="@string/message_not_received"/>
        </LinearLayout>


    </LinearLayout>


    <View
        android:background="@color/categroy_name"
        android:layout_width="match_parent"
        android:alpha="0.4"
        android:layout_height="@dimen/d0_1"/>
</LinearLayout>