<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    app:cardCornerRadius="12dp"
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:minHeight="130dp"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/productContainer"
            app:riv_oval="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:src="@color/farma5"
                android:id="@+id/productImage"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/nameOfProduct"
            android:text="asdasdasd"
            app:layout_constraintEnd_toStartOf="@+id/cardMoreOption"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/productContainer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/priceText"
            android:textColor="@color/white"
            android:text="dasda"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:background="@drawable/price_bg_main"
            app:layout_constraintStart_toStartOf="@+id/nameOfProduct"
            app:layout_constraintTop_toBottomOf="@+id/nameOfProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="15dp"
            android:text="dasd"
            android:drawablePadding="3dp"
            app:layout_constraintStart_toEndOf="@+id/priceText"
            app:layout_constraintTop_toTopOf="@+id/priceText"
            android:id="@+id/numberOfViews"
            app:layout_constraintEnd_toStartOf="@+id/cardMoreOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_visibility" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="30dp"
            android:id="@+id/cardMoreOption"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@+id/nameOfProduct"
            android:layout_marginTop="5dp"
            android:layout_height="30dp">

            <ImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic__more_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>