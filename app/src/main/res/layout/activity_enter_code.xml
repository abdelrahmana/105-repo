<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="@dimen/d0_8"
        android:layout_marginEnd="@dimen/d0_8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_backpress1"/>


        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d0_8"
            android:src="@drawable/ic_smart_phone_3x"
            android:layout_width="@dimen/d12"
            android:layout_height="@dimen/d12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textColor="@color/transparent_black_percent_90"
            android:text="@string/enter_code_hint1"
            />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"


                android:text="@string/enter_code_hint2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:id="@+id/tv_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginEnd="@dimen/d0_8"
                android:layout_marginStart="@dimen/d0_8"

                android:text="+9658544652"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/d2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:background="@drawable/rounded_edit_text"
            android:orientation="horizontal"
            android:padding="@dimen/d0_4"
            android:layout_marginBottom="@dimen/d0_4"
            android:layout_marginEnd="@dimen/d0_8"
            android:layout_marginStart="@dimen/d0_8">



            <EditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d0_8"
                android:layout_marginEnd="@dimen/d0_8"
                android:layout_weight="1"
                android:padding="@dimen/d0_4"
                android:background="@color/transparent"
                android:gravity="start"
                android:hint="@string/enter_code"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/test4" />




        </LinearLayout>



        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="normal"
                android:textColor="@color/transparent_black_percent_90"
                android:text="@string/resend_code"
                />
            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="normal"
                android:textColor="@color/transparent_black_percent_90"
                android:text="1:59"
                />

        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/btn_next"



            android:layout_marginTop="@dimen/d3_4"
            app:cardCornerRadius="@dimen/d1_2"
            android:elevation="@dimen/d0_8"
            app:cardElevation="@dimen/d0_8"



            android:background="?attr/selectableItemBackground"
            android:theme="@style/card_wave"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/login_btn">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="@dimen/d0_6"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/next"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_resend"


            android:layout_marginTop="@dimen/d3_4"
            app:cardCornerRadius="@dimen/d1_2"
            android:elevation="@dimen/d0_8"
            app:cardElevation="@dimen/d0_8"


            android:visibility="gone"
            android:background="?attr/selectableItemBackground"
            android:theme="@style/card_wave"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/login_btn">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="@dimen/d0_6"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/resend_code"/>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</ScrollView>