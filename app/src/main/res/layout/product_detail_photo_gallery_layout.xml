<LinearLayout android:layout_marginTop="16dp"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_detail_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:background="@drawable/dr_iv_main"
        android:layout_marginStart="@dimen/d0_8"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/d1_6"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="match_parent">

    <ImageView
        android:transitionName="profile"
        android:layout_width="match_parent"
        android:id="@+id/iv_main"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginEnd="@dimen/d1"
        android:layout_marginStart="@dimen/d0_8"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="250dp">
        <androidx.cardview.widget.CardView
            android:background="@drawable/dr_iv_main"
            android:layout_marginStart="@dimen/d0_8"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/d1_6"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_top"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/product_images_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="@drawable/dr_iv_main"
            android:layout_marginStart="@dimen/d0_8"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/d1_6"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_down"
            android:background="@drawable/product_images_bg"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>