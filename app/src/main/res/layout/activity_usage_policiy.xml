<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <include layout="@layout/toolbar_usage_policy"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swip_usage"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">




        <ScrollView
            android:background="@color/white"
            android:layout_width="match_parent" android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginEnd="@dimen/d1_6"
                android:layout_marginStart="@dimen/d1_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_usage"
                    android:layout_marginTop="@dimen/d2_6"
                    android:textColor="@color/desinger_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>

