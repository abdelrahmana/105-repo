<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <include layout="@layout/toolbar_backpress1"/>


    <LinearLayout
        android:padding="@dimen/two_unit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="start"
            android:text="@string/social_media"
            android:textSize="24sp"
            android:layout_marginTop="@dimen/d2_4"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/face"
            android:layout_marginTop="@dimen/three_unit"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_facebook"
                        android:letterSpacing="0.1"
                        android:textSize="@dimen/two_unit"
                        android:layout_marginStart="@dimen/three_unit"
                        android:textColor="@android:color/black"
                        android:text="@string/facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/link_now"
                    android:id="@+id/face_sate"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whats"

            android:visibility="gone"
            android:layout_marginTop="@dimen/d2_4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_whatsapp"
                        android:letterSpacing="0.1"
                        android:textSize="@dimen/two_unit"
                        android:layout_marginStart="@dimen/three_unit"
                        android:textColor="@android:color/black"
                        android:text="@string/whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="@string/link_now"
                    android:id="@+id/whats_sate"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/twitter"

            android:visibility="gone"
            android:layout_marginTop="@dimen/d2_4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_twitter"
                        android:letterSpacing="0.1"
                        android:textSize="@dimen/two_unit"
                        android:layout_marginStart="@dimen/three_unit"
                        android:textColor="@android:color/black"
                        android:text="@string/twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/twitter_sate"
                    android:linksClickable="true"
                    android:autoLink="all"
                    android:text="@string/link_now"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/insta"
            android:visibility="gone"
            android:layout_marginTop="@dimen/d2_4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_instagram"
                        android:letterSpacing="0.1"
                        android:textSize="@dimen/two_unit"
                        android:layout_marginStart="@dimen/three_unit"
                        android:textColor="@android:color/black"
                        android:text="@string/instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:text="@string/link_now"
                    android:id="@+id/insta_state"
                    android:linksClickable="true"
                    android:autoLink="all"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ly_empty"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="@dimen/d9"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/order_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/d2"
        android:textColor="@color/colorPrimary"
        android:text="@string/no_data_available"
        android:layout_marginTop="@dimen/d2"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>